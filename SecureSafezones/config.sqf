vehicleSteal	= true; // Set this to true to prevent people from stealing your vehicle in safezones.
vehicleGroup	= true; // If a vehicle is claimed by a person, his whole group should be able to access the vehicle if unlocked.

gearSteal 		= true; // Set this to true to prevent people from stealing your vehicle's gear.
blockRadius		= 25;	// Radius in meters to block gear menu around an enemy vehicle.

vehicleClaim 	= true; // Set this to true to add an ability to claim an unowned vehicle in safezones by getting in the driver's seat.
vehicleEnter	= true; // Set this to true to make sure all vehicles driven into a safezones are automatically claimed by the driver.

vehicleDump		= true; // Set this to true to prevent other people from selling your claimed vehicle at the Waste Dump.

vehiclePenalty	= 10; 	// Time in seconds to freeze a player when he/she enters an enemy vehicle.